<% flash.each do |name, msg| %>
    <div class="alert alert-<%= name == "notice" ? "success" : "danger" %>  alert-dismissible fade show" role="alert"> <%#TERNARARY USED TO GIVE DIFFERENT WARNING COLORS, ALERT-SUCCESS/DANGER%>
        <%= msg %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
        </button>
    </div>
  <% end %>
